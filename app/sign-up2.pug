extends include/templates/layout

block vars
    - var header_transparent = true;

append css
    
append content

    // Hero
    section.module-cover.parallax.text-center.fullscreen(data-background="assets/images/module-5.jpg" data-overlay="0.6")
        .container

            .row
                .col-lg-4.col-md-6.m-auto.form-container
                    .m-b-20.mt-5
                        h6 Create a new account
                    .m-b-20
                        form(method='post')
                            .form-group
                                input.form-control(type='text' placeholder='Name' required)
                            .form-group
                                input.form-control(type='email' placeholder='E-mail' required)
                            .form-group
                                input.form-control(type='password' placeholder='Password' required)
                            .form-group
                                input.form-control(type='password' placeholder='Confirm Password' required)
                            .form-group
                                // Checkbox for accepting terms
                                label
                                    input(type='checkbox' required) 
                                    |  I agree to the #[a(href='/terms-of-service.html' target='_blank') Terms of Service]
                            .form-group
                                button.btn.btn-block.btn-round.btn-brand(type='submit') Sign Up
                    .m-b-20
                        p
                            small
                                | By signing up, you agree to the
                                a(href='/terms-of-service.html' target='_blank')  terms of service
